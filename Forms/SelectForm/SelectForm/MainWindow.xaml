<Window x:Name="winSelect" x:Class="SelectForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelectForm"
        mc:Ignorable="d"
        Title="Set title with winSelect.Title" Height="325" Width="528">
    <Grid>
        <Label x:Name="lblDescription" Content="Enter a description in lblDescription:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lstSelectOptions" Margin="10,41,12,121"/>
        <GroupBox x:Name="grpNotes" Header="Notes" Margin="10,0,0,10" Visibility="Visible" Height="106" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="410">
            <TextBox x:Name="txtNotes" Margin="10,0,5,0" Text="Set text with txtNotes.Text or hide with grpNotes.Visibility = &quot;Hidden&quot;" TextWrapping="Wrap" IsReadOnly="True" BorderThickness="0,0,0,0" Height="73"/>
        </GroupBox>
        <Button x:Name="btnSave" Content="Select" Margin="0,0,12,61" Height="36" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="64" BorderThickness="0,0,0,0"/>

    </Grid>
</Window>
